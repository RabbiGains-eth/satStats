{
  "name": "satStats",
  "description": "Browser extension for displaying a satoshi's age and rarity for all Ordinal listings.",
  "version": "0.4",
  "manifest_version": 3,
  "icons": {
      "16": "/images/icon-16x16.png",
      "32": "/images/icon-32x32.png",
      "48": "/images/icon-48x48.png",
      "128": "/images/icon-128x128.png"
  },
  "background": {
      "service_worker": "scripts/background.js"
  },
  "content_scripts": [{
    "js": ["scripts/content.js"],
    "css": ["css/index.css"],
    "matches": ["<all_urls>"],
    "run_at": "document_idle"
  }],
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "/images/icon-16x16.png",
          "32": "/images/icon-32x32.png",
          "48": "/images/icon-48x48.png",
          "128": "/images/icon-128x128.png"
      }
  },
  "options_page": "options.html",
  "permissions": [
      "storage",
      "tabs"
  ],
  "host_permissions": [
      "https://ord.io/*", 
      "https://magiceden.io/ordinals/*",
      "https://ordinalswallet.com/*",
      "https://gamma.io/*",
      "https://ocm9425.tools/*"
  ]
}